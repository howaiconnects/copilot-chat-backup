# Vector Search Configuration
# Copy to .env and fill in your values

# Qdrant Configuration (Docker)
QDRANT_HOST=localhost
QDRANT_PORT=6337
QDRANT_COLLECTION=copilot_chats

# Azure OpenAI (AI Foundry) - Recommended
# Get these from Azure Portal or VSCode AI Toolkit extension
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=text-embedding-3-small
AZURE_OPENAI_API_VERSION=2024-02-01

# Alternative: OpenAI (non-Azure)
# OPENAI_API_KEY=sk-...
# EMBEDDING_PROVIDER=openai

# Database
DATABASE_PATH=./copilot_backup.db

# Search Configuration
SEARCH_LIMIT=5
SCORE_THRESHOLD=0.7

# Sync Configuration
SYNC_BATCH_SIZE=10
AUTO_SYNC=false
SYNC_INTERVAL=3600  # seconds
