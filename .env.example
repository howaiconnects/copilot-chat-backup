# Copilot Backup - Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================
# Service Ports
# ============================================
# Adjust these if you have port conflicts with other services

PROMETHEUS_PORT=9091
GRAFANA_PORT=3001
METRICS_PORT=8082
SEARCH_PORT=8083
QDRANT_PORT=6337
QDRANT_GRPC_PORT=6338
REDIS_PORT=6390
NODE_EXPORTER_PORT=9101

# ============================================
# Grafana Configuration
# ============================================

GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=copilot-admin-2024

# Optional: Change to disable login requirement
# GF_AUTH_ANONYMOUS_ENABLED=true
# GF_AUTH_ANONYMOUS_ORG_ROLE=Viewer

# ============================================
# Project Configuration
# ============================================

# Docker Compose project name (for network isolation)
COMPOSE_PROJECT_NAME=copilot-backup

# Database location (relative to project root)
DB_PATH=./copilot_backup.db

# GitHub configuration file
GITHUB_TOKEN_FILE=./config.json

# Backup directory
BACKUP_DIR=./backups

# ============================================
# Metrics Configuration
# ============================================

# Metrics collection interval (seconds)
METRICS_INTERVAL=300

# Prometheus retention period
PROMETHEUS_RETENTION=15d

# ============================================
# Search Configuration
# ============================================

# Embedding model for semantic search
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Qdrant collection name
QDRANT_COLLECTION=copilot_messages

# ============================================
# Logging
# ============================================

LOG_LEVEL=INFO

# ============================================
# Optional: External Integrations
# ============================================

# Airtable (if using airtable_sync.py)
# AIRTABLE_API_KEY=your_key_here
# AIRTABLE_BASE_ID=your_base_id
# AIRTABLE_TABLE_NAME=your_table_name

# Slack notifications (future feature)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# Email alerts (future feature)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_password
